//To print the sum of middle row and middle column of a matrix using single loop

#include<iostream>
using namespace std;
int main(){
    int arr[3][3]={{1,2,3}, {4,5,6}, {7,8,9}};
    int sum=0;
    int sum1=0;
    for(int i=0; i<3; i++){
        sum += arr[i][1];
        sum1 += arr[1][i];
    }
    cout<<sum<<endl;
    cout<<sum1<<endl;
    return 0;
}
